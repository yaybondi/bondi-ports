<?xml version="1.0" encoding="utf-8"?>
<rules>

    <prepare>
    <![CDATA[

cd $XPACK_SOURCE_DIR
autoreconf -v --install
glib-gettextize --force --copy
./configure --prefix=/usr --with-opkglibdir=/var/lib

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd $XPACK_BUILD_DIR
make -j${XPACK_PARALLEL_JOBS}

    ]]>
    </build>

    <install>
    <![CDATA[

cd $XPACK_BUILD_DIR
make DESTDIR=$XPACK_INSTALL_DIR install

    ]]>
    </install>

</rules>
