            <package name="bison"/>
            <package name="flex"/>
            <package name="gettext"/>
            <package name="texinfo"/>
            <package name="chrpath"/>
            <package name="python3"/>
            <package name="file"/>
            <package name="xz-utils"/>
            <package name="zlib1g-dev"/>
        </requires>

        <xi:include href="rules.xml"/>
    </source>

    <xi:include href="binutils.xml"/>
