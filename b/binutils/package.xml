<?xml version="1.0" encoding="utf-8"?>
<control xmlns:xi="http://www.w3.org/2001/XInclude">
    <defines>
        <def name="BOLT_BUILD_DIR" value="build"/>
    </defines>

    <source name="binutils" architecture-independent="false">
        <description>
            <summary>GNU assembler, linker and binary utilities</summary>
            <p>
            The programs in this package are used to assemble, link and manipulate
            binary and object files. They may be used in conjunction with a compiler
            and various libraries to build programs.
            </p>
        </description>

        <sources>
            <file src="binutils-2.31.1.tar.xz" subdir="sources"
                sha256sum="e398a2d579faa0f2b5a988add5f7481af8e21a21f63b6ea5702e6f517960c5eb"/>
            <file src="debian-patches-16.tar.gz" subdir="patches"
                sha256sum="79f3c7dbf9d03a07d31bcf196048ab620991abfdfae113dd18954c4cf5b86f97"/>
        </sources>

        <patches>
            <patchset subdir="sources">
