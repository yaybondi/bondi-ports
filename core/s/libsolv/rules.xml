<?xml version="1.0" encoding="utf-8"?>
<rules>
    <prepare>
    <![CDATA[

cd "$BONDI_BUILD_DIR"
cmake \
    -DCMAKE_SYSTEM_NAME=Linux \
    -DCMAKE_C_COMPILER="${BONDI_HOST_TYPE}-gcc" \
    -DCMAKE_CXX_COMPILER="${BONDI_HOST_TYPE}-g++" \
    -DCMAKE_FIND_ROOT_PATH="$BONDI_INSTALL_PREFIX" \
    -DCMAKE_FIND_ROOT_PATH_MODE_PROGRAM=NEVER \
    -DCMAKE_FIND_ROOT_PATH_MODE_LIBRARY=ONLY \
    -DCMAKE_FIND_ROOT_PATH_MODE_INCLUDE=ONLY \
    -DCMAKE_INSTALL_PREFIX="$BONDI_INSTALL_PREFIX" \
    -DENABLE_STATIC=1 \
    -DLIB=lib \
    -DCMAKE_BUILD_TYPE=RelWithDebInfo \
    -DUSE_VENDORDIRS=1 \
    -DDEBIAN=1 \
    -DCMAKE_VERBOSE_MAKEFILE=ON \
    -DENABLE_LZMA_COMPRESSION=1 \
    -DENABLE_BZIP2_COMPRESSION=1 \
    -DCMAKE_SKIP_RPATH=FALSE \
    -DCMAKE_SKIP_INSTALL_RPATH=TRUE \
    "$BONDI_SOURCE_DIR"

    ]]>
    </prepare>

    <build>
    <![CDATA[

cd "$BONDI_BUILD_DIR"
make -j"$BONDI_PARALLEL_JOBS"

    ]]>
    </build>

    <install>
    <![CDATA[

cd "$BONDI_BUILD_DIR"
make DESTDIR="$BONDI_INSTALL_DIR" install

    ]]>
    </install>
</rules>
